{
  "compilerOptions": {
    "declaration": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es7",
      "dom"
    ],
    "pretty": true,
    "typeRoots": [
      "node_modules/@types", "./src/types"
    ],
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@hooks/*": ["src/hooks/*"],
      "@taskpane/*": ["src/taskpane/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@api/*": ["src/api/*"],
      "@helpers/*": ["src/helpers/*"],
      "@pages/*": ["src/taskpane/pages/*"],
      "@components/*": ["src/taskpane/components/*"],
      "@modals/*": ["src/taskpane/components/modals/*"],
      "@ui/*": ["src/taskpane/components/ui/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "ts-node": { 
    "files": true 
  },
  "include": ["src", "src/types", "prevmodals"]
}